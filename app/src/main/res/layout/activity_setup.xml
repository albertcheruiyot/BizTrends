<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".SetupActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setup_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/setup_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Username"
        android:gravity="start|top"
        android:layout_below="@+id/setup_profile_image"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/inputs"
        android:padding="14dp"
        android:drawableLeft="@drawable/username"
        android:inputType="textMultiLine" />
    <EditText
        android:id="@+id/setup_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Full Name"
        android:layout_below="@+id/setup_user_name"
        android:gravity="start|top"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/inputs"
        android:padding="14dp"
        android:drawableLeft="@drawable/name"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:id="@+id/simple_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_below="@+id/setup_full_name">
        <Button
            android:id="@+id/button_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="Select Country"/>
        <TextView
            android:id="@+id/text_selected_country"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/inputs"
            android:drawableLeft="@drawable/country"
            android:padding="14dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"/>


    </LinearLayout>
    <!--<EditText
        android:id="@+id/setup_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Country"
        android:background="@drawable/inputs"
        android:padding="14dp"
        android:layout_below="@+id/button_display"
        android:gravity="start|top"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:drawableLeft="@drawable/country"
        android:inputType="textMultiLine" />-->



    <Button
        android:id="@+id/setup_information_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simple_linear_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/button"
        android:padding="14dp"
        android:textStyle="bold"
        android:text="SAVE" />


</RelativeLayout>